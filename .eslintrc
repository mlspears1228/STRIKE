{
    "env": {
        "browser": true,
        "es2021": true,
        "p5js/p5": true
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "plugin:p5js/p5"
    ],
    "overrides": [
        {
            "env": {
                "node": true
            },
            "files": [
                ".eslintrc.{js,cjs}"
            ],
            "parserOptions": {
                "sourceType": "script"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "script"
    },
    "rules": {
        "prettier/prettier": "error"
    },
    "plugins": [
        "prettier",
        "p5js"
    ]
}
